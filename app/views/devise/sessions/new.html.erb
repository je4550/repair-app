<div style="max-width: 400px; margin: 100px auto; padding: 20px; font-family: Arial, sans-serif;">
  <div style="background-color: #fff; padding: 40px; border: 1px solid #dee2e6; border-radius: 5px;">
    <h2 style="text-align: center; margin-bottom: 30px; color: #333;">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div style="margin-bottom: 20px;">
        <%= f.label :email, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" %>
      </div>

      <div style="margin-bottom: 20px;">
        <%= f.label :password, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
        <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; font-size: 16px;" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div style="margin-bottom: 20px;">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div style="margin-bottom: 20px;">
        <%= f.submit "Log in", style: "width: 100%; padding: 15px; background-color: #dc3545; color: white; border: none; border-radius: 5px; font-size: 18px; font-weight: bold; cursor: pointer;" %>
      </div>
    <% end %>

    <div style="text-align: center;">
      <%= link_to "Forgot your password?", new_password_path(resource_name), style: "color: #dc3545;" %><br>
      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), style: "color: #dc3545;" %>
      <% end %>
    </div>

    <% if notice.present? %>
      <div style="margin-top: 20px; padding: 10px; background-color: #d4edda; border: 1px solid #c3e6cb; border-radius: 5px; color: #155724;">
        <%= notice %>
      </div>
    <% end %>

    <% if alert.present? %>
      <div style="margin-top: 20px; padding: 10px; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 5px; color: #721c24;">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <p style="text-align: center; margin-top: 20px; color: #666;">
    <strong>Demo Login:</strong> admin@jeffsautomotive.com / password123
  </p>
</div>