<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "#{current_location&.name} - #{current_shop&.name}" || "AutoPlanner.ai" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        margin: 0;
        background-color: #f5f5f5;
      }
      
      .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: 240px;
        background: white;
        border-right: 1px solid #e0e0e0;
        overflow-y: auto;
        z-index: 1000;
        transition: transform 0.3s ease;
      }
      
      .sidebar-logo {
        padding: 20px;
        border-bottom: 1px solid #e0e0e0;
      }
      
      .sidebar-nav {
        padding: 20px 0;
      }
      
      .sidebar-item {
        display: flex;
        align-items: center;
        padding: 12px 20px;
        color: #666;
        text-decoration: none;
        transition: all 0.2s;
      }
      
      .sidebar-item:hover {
        background: #f5f5f5;
        color: #333;
      }
      
      .sidebar-item.active {
        background: #ffeef0;
        color: #dc3545;
        border-left: 3px solid #dc3545;
      }
      
      .main-content {
        margin-left: 240px;
        min-height: 100vh;
      }
      
      .header {
        background: white;
        padding: 20px 40px;
        border-bottom: 1px solid #e0e0e0;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      .content {
        padding: 40px;
      }
      
      .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        padding: 8px;
      }
      
      .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
      }
      
      @media (max-width: 768px) {
        .sidebar {
          transform: translateX(-100%);
        }
        
        .sidebar.active {
          transform: translateX(0);
        }
        
        .sidebar-overlay.active {
          display: block;
        }
        
        .main-content {
          margin-left: 0;
        }
        
        .header {
          padding: 15px 20px;
        }
        
        .content {
          padding: 20px;
        }
        
        .mobile-menu-toggle {
          display: block;
        }
      }
    </style>
  </head>

  <body>
    <div style="display: flex; min-height: 100vh;">
      <!-- Mobile Sidebar Overlay -->
      <div class="sidebar-overlay" onclick="toggleSidebar()"></div>
      
      <!-- Sidebar -->
      <div class="sidebar" id="sidebar">
        <div class="sidebar-logo">
          <div style="display: flex; justify-content: space-between; align-items: center;">
            <%= image_tag "logo.png", alt: "AutoPlanner.ai", style: "height: 32px;" %>
            <button class="mobile-menu-toggle" onclick="toggleSidebar()" style="display: none;">âœ•</button>
          </div>
        </div>
        <nav class="sidebar-nav">
          <%= link_to authenticated_root_path, class: "sidebar-item #{'active' if controller_name == 'dashboard'}" do %>
            <span style="margin-right: 12px;">ğŸ“Š</span> Dashboard
          <% end %>
          <%= link_to customers_path, class: "sidebar-item #{'active' if controller_name == 'customers'}" do %>
            <span style="margin-right: 12px;">ğŸ‘¥</span> Customers
          <% end %>
          <%= link_to appointments_path, class: "sidebar-item #{'active' if controller_name == 'appointments' && action_name != 'calendar'}" do %>
            <span style="margin-right: 12px;">ğŸ“…</span> Appointments
          <% end %>
          <%= link_to calendar_appointments_path, class: "sidebar-item #{'active' if controller_name == 'appointments' && action_name == 'calendar'}" do %>
            <span style="margin-right: 12px;">ğŸ“†</span> Calendar
          <% end %>
          <%= link_to vehicles_path, class: "sidebar-item #{'active' if controller_name == 'vehicles'}" do %>
            <span style="margin-right: 12px;">ğŸš—</span> Vehicles
          <% end %>
          <%= link_to services_path, class: "sidebar-item #{'active' if controller_name == 'services'}" do %>
            <span style="margin-right: 12px;">ğŸ”§</span> Services
          <% end %>
          <%= link_to communications_path, class: "sidebar-item #{'active' if controller_name == 'communications'}" do %>
            <span style="margin-right: 12px;">ğŸ’¬</span> Messages
          <% end %>
          <%= link_to reports_revenue_path, class: "sidebar-item #{'active' if controller_name.include?('reports')}" do %>
            <span style="margin-right: 12px;">ğŸ“Š</span> Reports
          <% end %>
          <%= link_to "#", class: "sidebar-item" do %>
            <span style="margin-right: 12px;">âš™ï¸</span> Settings
          <% end %>
          
          <div style="margin-top: 40px; padding: 20px; border-top: 1px solid #e0e0e0;">
            <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "sidebar-item" do %>
              <span style="margin-right: 12px;">ğŸšª</span> Sign Out
            <% end %>
          </div>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <% if notice.present? %>
          <div style="background: #d1ecf1; color: #0c5460; padding: 12px 20px; border-bottom: 1px solid #bee5eb;">
            <%= notice %>
          </div>
        <% end %>
        
        <% if alert.present? %>
          <div style="background: #f8d7da; color: #721c24; padding: 12px 20px; border-bottom: 1px solid #f5c6cb;">
            <%= alert %>
          </div>
        <% end %>
        
        <!-- Mobile Menu Toggle (shown in header on mobile) -->
        <button class="mobile-menu-toggle" onclick="toggleSidebar()" style="position: fixed; top: 20px; left: 20px; z-index: 1001;">â˜°</button>
        
        <%= yield %>
      </div>
    </div>
    
    <script>
      function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.querySelector('.sidebar-overlay');
        
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
      }
      
      // Close sidebar when clicking a link on mobile
      document.querySelectorAll('.sidebar-item').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth <= 768) {
            toggleSidebar();
          }
        });
      });
    </script>
  </body>
</html>